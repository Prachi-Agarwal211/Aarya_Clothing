# Aarya Clothing - Environment Configuration
# Copy this file to .env and fill in the values

# ==================== Environment ====================
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO

# ==================== Database ====================
POSTGRES_PASSWORD=change_this_password_in_production
DATABASE_URL=postgresql://postgres:password@localhost/aarya_clothing

# ==================== Redis ====================
REDIS_URL=redis://localhost:6379

# ==================== Security ====================
# Generate strong secrets: openssl rand -base64 64
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
SECRET_KEY=your-encryption-secret-key-change-in-production

# Token Settings
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Policy
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBER=true
PASSWORD_REQUIRE_SPECIAL=false

# Rate Limiting
LOGIN_RATE_LIMIT=5
LOGIN_RATE_WINDOW=300
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_MINUTES=30

# ==================== Email (SMTP) Configuration ====================
# For OTP verification emails
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@example.com
SMTP_PASSWORD=your_smtp_password
SMTP_TLS=true

# ==================== WhatsApp Configuration ====================
# For OTP verification via WhatsApp (Twilio)
# Get credentials from: https://console.twilio.com
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=whatsapp:+14155238886
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# Alternative: Meta Cloud API for WhatsApp
# Get credentials from: https://developers.facebook.com
META_ACCESS_TOKEN=your_meta_access_token
META_PHONE_NUMBER_ID=your_phone_number_id

# ==================== External Services ====================

# Stripe Payment Gateway
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ==================== URLs ====================

# Frontend URL (for CORS)
NEXT_PUBLIC_API_URL=http://localhost:8000
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# ==================== Monitoring ====================

# Grafana Admin Password
GRAFANA_ADMIN_PASSWORD=change_grafana_password_in_production

# ==================== AWS/R2 (Optional) ====================

# For file uploads
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=us-east-1
R2_ENDPOINT=https://your-account.r2.cloudflarestorage.com
R2_BUCKET=aarya-uploads

# ==================== OTP Configuration ====================

# OTP Settings
OTP_CODE_LENGTH=6
OTP_EXPIRY_MINUTES=10
OTP_MAX_ATTEMPTS=3
OTP_RESEND_COOLDOWN_MINUTES=1
OTP_MAX_RESEND_PER_HOUR=5
