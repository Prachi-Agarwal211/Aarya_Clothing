# Aarya Clothing - Root Environment Configuration
# Copy this file to .env and fill in the values
# Used by docker-compose for all services

# ==================== Environment ====================
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO

# ==================== Database ====================
POSTGRES_PASSWORD=change_this_password_in_production
DATABASE_URL=postgresql://postgres:${POSTGRES_PASSWORD}@postgres:5432/aarya_clothing

# ==================== Redis ====================
REDIS_URL=redis://redis:6379/0

# ==================== Security ====================
# Generate strong secrets: openssl rand -base64 64
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
SECRET_KEY=your-encryption-secret-key-change-in-production

# ==================== Token Settings ====================
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ==================== Password Policy ====================
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBER=true
PASSWORD_REQUIRE_SPECIAL=false

# ==================== Rate Limiting ====================
LOGIN_RATE_LIMIT=5
LOGIN_RATE_WINDOW=300
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_MINUTES=30

# ==================== URLs ====================
# Frontend URL (for CORS)
NEXT_PUBLIC_API_URL=http://localhost:8001
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:8001"]

# ==================== Frontend ====================
NEXT_PUBLIC_API_URL=http://localhost:8001

# ==================== Payment Gateways ====================

# Razorpay (Primary for Indian Market)
RAZORPAY_KEY_ID=rzp_test_your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
RAZORPAY_WEBHOOK_SECRET=whsec_your_razorpay_webhook_secret

# Stripe (International)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Payment URLs
PAYMENT_SUCCESS_URL=http://localhost:3000/payment/success
PAYMENT_FAILURE_URL=http://localhost:3000/payment/failure

# ==================== Monitoring ====================
GRAFANA_ADMIN_PASSWORD=change_grafana_password_in_production

# ==================== Email/SMTP ====================
# For sending OTPs and password reset emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=true
EMAIL_FROM=noreply@aaryaclothings.com
EMAIL_FROM_NAME=Aarya Clothings

# ==================== AWS/R2 (Optional) ====================
# For file uploads
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=us-east-1
R2_ENDPOINT=https://your-account.r2.cloudflarestorage.com
R2_BUCKET=aarya-uploads
